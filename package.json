{
	"name": "eg-tareas-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint src",
		"lint:fix": "eslint src --fix",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:coverage": "vitest run --coverage",
		"test:manual:e2e": "playwright test --ui",
	  "start-backend": "bash ./scripts/start-backend.sh",
		"test:automated:e2e": "start-server-and-test 'npm run start-backend' http://localhost:9000/health 'npx playwright test'",
		"test:all": "npm run test:unit -- --run && npm run test:automated:e2e",
		"test:ci": "npm run test:unit -- --run --coverage && npm run test:automated:e2e"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.3",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"eslint": "^9.7.0",
		"eslint-plugin-svelte": "^3.12.2",
		"globals": "^16.4.0",
		"start-server-and-test": "^2.0.13",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^7.1.3",
		"vitest": "^3.2.4",
		"@testing-library/dom": "10.4.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.6",
		"@testing-library/user-event": "^14.5.2",
		"@types/eslint": "^9.6.1",
		"@types/luxon": "^3.4.2",
		"@vitest/coverage-v8": "^3.2.4",
		"jsdom": "^26.1.0"
	},
	"dependencies": {
		"axios": "^1.11.0",
		"luxon": "^3.7.2",
		"svelte": "^5.38.8"
	}
}
